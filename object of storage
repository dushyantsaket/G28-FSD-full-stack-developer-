      <button onclick="saveData()">Click</button>

            <button onclick="saveData()">Save</button>
      <table border="1" cellpadding="10" cellspacing="0">
        <table>
  <thead>
    <tr>
      <th>SR.NO</th>
      <th>Name</th>
      <th>Email</th>
