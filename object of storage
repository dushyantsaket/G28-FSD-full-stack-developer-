    <script>
      let allData = JSON.parse(localStorage.getItem("user")) || [];
      function saveData() {
        const nameInput = document.getElementById("name");
        const emailInput = document.getElementById("email");
        const roleInput = document.getElementById("role");
        const collageInput = document.getElementById("collage");
        const mobileInput = document.getElementById("mobile");
        const cityInput = document.getElementById("city");
        const courseInput = document.getElementById("course");
       const GenderInput = document.getElementById("gender");
      const DateofBirthInput = document.getElementById("dob");

        const NationalityInput = document.getElementById("Nationality");
        const MaritalStatusInput = document.getElementById("Marital Status");
       const StudentIDInput = document.getElementById("studentId");
        const DepartmentInput = document.getElementById("department");

        allData.push({
          name: nameInput.value,
          email: emailInput.value,
          role: roleInput.value,
          collage: collageInput.value,
          mobile: mobileInput.value,
          city: cityInput.value,
          course: courseInput.value,
          Gender: GenderInput.value,
          DateofBirth: DateofBirthInput.value,
          Nationality: NationalityInput.value,
          MaritalStatus: MaritalStatusInput.value,
          StudentID: StudentIDInput.value,
          Department: DepartmentInput.value,
        });

        localStorage.setItem("user", JSON.stringify(allData));
        nameInput.value = "";
        emailInput.value = "";
        roleInput.value = "";
        collageInput.value = "";
        mobileInput.value = "";
        cityInput.value = "";
        courseInput.value = "";
        GenderInput.value = "";
        DateofBirthInput.value = "";
        NationalityInput.value = "";
        StudentID.value = "";
        Department.value = "";

        displayData();
      }

      function displayData() {
        const dataBody = document.getElementById("dataBody");
        dataBody.innerHTML = "";

        allData.forEach((items, index) => {
          const row = document.createElement("tr");

          const td1 = document.createElement("td");
          td1.textContent = index + 1;

          const td2 = document.createElement("td");
          td2.textContent = items.name;

          const td3 = document.createElement("td");
          td3.textContent = items.email;

          const td4 = document.createElement("td");
          td4.textContent = items.role;

          const td5 = document.createElement("td");
          td5.textContent = items.collage;

          const td6 = document.createElement("td");
          td6.textContent = items.mobile;

          const td7 = document.createElement("td");
          td7.textContent = items.city;

          const td8 = document.createElement("td");
          td8.textContent = items.course;

          const td9 = document.createElement("td");
          td9.textContent = items.Gender;

          const td10 = document.createElement("td");
          td10.textContent = items.DateofBirth;

          const td11 = document.createElement("td");
          td11.textContent = items.Nationality;

          const td12 = document.createElement("td");
          td12.textContent = items.StudentID;

          const td13 = document.createElement("td");
          td13.textContent = items.Department;

          row.append(
            td1,
            td2,
            td3,
            td4,
            td5,
            td6,
            td7,
            td8,
            td9,
            td10,
            td11,
            td12,
            td13
          );

          dataBody.append(row);
        });
      }

      displayData();
    </script>
